<h2>編集 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :苗字 %><br />
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :名前 %><br />
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :メール %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :telephone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :会社名、農家名 %><br />
    <%= f.text_field :company, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :詳細 %><br />
    <%= f.text_area :details, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>現在確認を待っています: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :パスワード変更 %> <i>(変更しない場合は空白のままにします)</i><br />
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> 文字以上で登録してください。</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :変更したパスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :現在のパスワード %> <i>(変更を確認するには、現在のパスワードが必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
    <%= f.hidden_field :image_cache %>
  </div>

  <div class="form-group">
    <%= f.label :cover_image %>
    <%= f.file_field :cover_image, class: "form-control" %>
    <%= f.hidden_field :cover_image_cache %>
    
    <% if @account.image.present? %>
      <%= image_tag @account.image.thumb.url, class: "mt-4" %>
    <% end %> 
  </div>


  <div class="form-group">
    <%= f.submit "Update", class: "btn btn-success" %>
  </div>
<% end %>
  
  <h3>アカウントを削除しますか？</h3>
  <p> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  <%= link_to "Back", :back %>

