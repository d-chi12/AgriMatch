<div class="property-main-photo" style="background-image:url('<%= cover_image_url @account %>')"> 
  <div class="photo-overlay">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render "properties/profile_contact_details", agent: @account %>
    </div>

    <div class="col-md-8">
      <div class="row">
        <div class="col">
          <%
=begin%>
 <p class="h4 mb-0"><%= @propertie.full_name %></p>
          <p class="mb-2"><%= @account.company %></p> 
<%
=end%>
          <p class="text-muted">農作物一覧 <%= time_ago_in_words @account.created_at %></p>
        </div>
      </div>
      <div class="row mt-5 pt4">
        <div class="col">
          <p class="h5">自己紹介</p>

          <div id="prop-details" class="">
            <%= simple_format @account.details %>
          </div>

          <button class="btn btn-outline-info mt-3" id="toggleDetails">詳細</button>
        </div>  
      </div>
    </div>
  </div>
</div>

<section class="mt-5 mb-5">
  <div class="container">
    <div class="row pro-box">
      <div class="col-12">
        <p class="h3 mb-3">Match情報</p>
      </div>
        <%= render "properties/list", properties: @properties %>
    </div>
    <div class="row pro-box">
      <div class="col-12">
        <p class="h3 mb-3">ブログ</p>
      </div>
        <%= render "posts/list", posts: @posts %>
    </div>
  </div>
</section>

<%= render "properties/send_email_modal", agent: @account %>